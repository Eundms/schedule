<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/project_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="내지식에 부릉부릉" />

    <TextView
        android:id="@+id/project_item_numofmember"
        android:layout_margin="10dp"
        android:layout_toRightOf="@id/project_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4명" />
    <TextView
        android:id="@+id/project_item_recenttime"
        android:layout_below="@id/project_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10분전 대화" />
</RelativeLayout>